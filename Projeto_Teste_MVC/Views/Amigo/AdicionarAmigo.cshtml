@model Projeto_Teste_MVC.Models.AmigoModel

@{
    ViewData["Title"] = "AdicionarAmigo";
}

<h1>AdicionarAmigo</h1>

<h4>AmigoModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdicionarAmigo" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" name="nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" name="sobrenome" class="form-control" />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" name="idade" class="form-control" />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aniversario" class="control-label"></label>
                <input asp-for="Aniversario" name="aniversario" class="form-control" />
                <span asp-validation-for="Aniversario" class="text-danger"></span>
           
            <input href="/Amigo/ListarAmigo" type="submit" value="Create" class="btn btn-primary" />
        </div>
        </form>
    </div>
</div>

<div>
    <a href="/Amigo/ListarAmigo">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
